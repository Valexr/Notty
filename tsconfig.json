{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "$lib/*": [
                "src/lib/*"
            ],
            "$pages/*": [
                "src/pages/*"
            ],
            "$types": [
                "src/types.ts"
            ],
        },
        "strict": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "verbatimModuleSyntax": true,
        "lib": [
            "DOM",
            "ESNext",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "target": "ESNext",
        "types": [
            "svelte"
        ]
    },
    "include": [
        "src/**/*"
    ],
}